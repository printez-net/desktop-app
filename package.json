{
  "name": "@printez/desktop-app",
  "productName": "PrintEZ",
  "version": "1.0.0",
  "description": "PrintEZ Factory Desktop App",
  "main": "src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development electron-forge start",
    "package": "NODE_ENV=production electron-forge package",
    "make": "NODE_ENV=production electron-forge make",
    "make:win": "NODE_ENV=production electron-builder --win --x64",
    "make:mac": "NODE_ENV=production electron-builder --mac --arm64",
    "make:mac-intel": "NODE_ENV=production electron-builder --mac --x64",
    "release": "NODE_ENV=production electron-builder",
    "dist": "NODE_ENV=production electron-builder --publish always"
  },
  "keywords": [],
  "author": {
    "name": "Tu Tran",
    "email": "tutv95@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^11.1.1",
    "mkdirp": "^3.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@electron-forge/publisher-github": "^6.1.1",
    "electron": "24.1.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0"
  },
  "mac": {
    "target": "dmg",
    "icon": "assets/images/logo.icns"
  },
  "dmg": {
    "icon": "assets/images/logo.icns"
  },
  "packageManager": "yarn@3.5.0",
  "build": {
    "appId": "net.printez.factory",
    "win": {
      "publish": [
        "github"
      ]
    }
  }
}
